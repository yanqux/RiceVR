<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#242424"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/back"
            style="@style/titlebar_leftbutton">

            <ImageView
                style="@style/titlebar_leftbuttonimage"
                android:background="@drawable/back_login" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="修改密码"
            android:textSize="22sp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#545454">

        <RelativeLayout
            android:id="@+id/rl_register"
            android:layout_width="292dp"
            android:layout_height="354dp"
            android:background="@drawable/corners_my_bg"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="34dp">

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_height="43dp"
                    android:layout_width="227dp"
                    android:hint="请输入用户名"
                    android:background="@null"
                    android:layout_marginLeft="30dp"
                    android:inputType="number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="43dp"
                android:layout_marginTop="119dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/my_validate_input_bg">

                <EditText
                    android:id="@+id/et_validate"
                    android:layout_width="99dp"
                    android:layout_height="43dp"
                    android:hint="验证码"
                    android:background="@null"
                    android:layout_marginLeft="30dp"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_validate"
                android:layout_width="107dp"
                android:layout_height="43dp"
                android:background="@drawable/my_validate_btn"
                android:layout_marginTop="119dp"
                android:layout_marginLeft="168dp" />

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginTop="191dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_height="43dp"
                    android:layout_width="227dp"
                    android:hint="请输入密码"
                    android:background="@null"
                    android:layout_marginLeft="30dp"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_comfirm"
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:background="@drawable/my_comfirm_btn"
                android:layout_marginTop="263dp"
                android:layout_marginLeft="18dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
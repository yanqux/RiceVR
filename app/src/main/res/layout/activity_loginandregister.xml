<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#242424"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/back"
            style="@style/titlebar_leftbutton">

            <ImageView
                style="@style/titlebar_leftbuttonimage"
                android:background="@drawable/back_login" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#545454">

        <Button
            android:id="@+id/btn_sel_login"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/my_login_sel_btn" />

        <Button
            android:id="@+id/btn_sel_register"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/my_register_btn" />


        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="292dp"
            android:layout_height="328dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/corners_my_bg">

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="227dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:inputType="number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="113dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="227dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="160dp"
                android:text="默认密码:123456(安全起见请及时修改密码)"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/my_login_btn" />

            <TextView
                android:id="@+id/tv_changepsw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="280dp"
                android:text="修改密码"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_register"
            android:layout_width="292dp"
            android:layout_height="354dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/corners_my_bg"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_reg_username"
                    android:layout_width="227dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:inputType="number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="119dp"
                android:background="@drawable/my_validate_input_bg">

                <EditText
                    android:id="@+id/et_reg_validate"
                    android:layout_width="99dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="验证码"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_validate"
                android:layout_width="107dp"
                android:layout_height="43dp"
                android:layout_marginLeft="168dp"
                android:layout_marginTop="119dp"
                android:background="@drawable/my_validate_btn" />

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="191dp"
                android:background="@drawable/my_input_bg">

                <EditText
                    android:id="@+id/et_reg_password"
                    android:layout_width="227dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_reg_comfirm"
                android:layout_width="257dp"
                android:layout_height="43dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="263dp"
                android:background="@drawable/my_comfirm_btn" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>